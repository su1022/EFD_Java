<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/Colblue"
    tools:context=".Activity.NewFoodItemAddActivity">

    <EditText
        android:id="@+id/edit_add_foodName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:background="@drawable/shape_new_food_item_name"
        android:hint="Food Name"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textColorHighlight="@color/colorWhite"/>

    <EditText
        android:id="@+id/edit_add_foodCal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:background="@drawable/shape_new_food_item_name"
        android:hint="Calories"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textColorHighlight="@color/colorWhite"/>

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add"
        android:shadowColor="@android:color/transparent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="0dp"
        android:padding="15dp"
        android:background="@drawable/shape_new_food_item_add"/>


</LinearLayout>